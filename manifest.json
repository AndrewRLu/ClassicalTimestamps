{
  "name": "ClassicalTimestamps: Automatic movement timestamps",
  "description": "Auto-generate timestamps for classical music movements on YouTube.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage", 
    "activeTab"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}